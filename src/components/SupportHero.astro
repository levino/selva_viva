---
const { supportPageData } = Astro.props;
---

<div class="container mt-9 mx-auto px-4">
  {
    supportPageData.data.spanish_donation_msg && (
      <>
        <div class="bg-yellow_leave-600 text-center font-all font-bold mb-5 p-3 text-brown_dark-900 text-lg tracking-wider">
          {supportPageData.data.spanish_donation_msg}
          <a
            class="text-blue-900 hover:underline uppercase"
            href="/es/contacto"
          >
            Ir a CONTACTO
          </a>
        </div>
      </>
    )
  }
  <div class="flex flex-wrap -mx-4">
    <div
      class="flex flex-col items-center justify-center mb-10 px-10 support_hero w-full md:items-end md:w-1/2"
      style="background-position: center center; background-size: cover;"
    >
      <h1
        class="font-bold font-sans mb-0 text-3xl text-center text-yellow_leave-600 md:text-right"
      >
        {supportPageData.data.title}
      </h1>
      <p
        class="font-all mb-3 text-brown-600 text-center text-lg tracking-wider md:text-right"
      >
        {supportPageData.data.subtitle}
      </p>
      <p
        class="font-all text-brown_dark-900 text-center text-xl tracking-wider md:text-right"
      >
        {supportPageData.data.excerpt}
      </p>
      <div class="w-11/12">
        <ul
          class="flex flex-wrap font-all font-normal gap-2 justify-center mt-5 pb-3 text-brown_dark-900 tracking-wide md:block md:text-right"
        >
          {
            supportPageData.data.list_how_we_use_money.map((item) => (
              <li>{item}</li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="md:w-1/2 px-4 w-full flex flex-col items-center">
      <div class="w-full" set:html={supportPageData.data.donation_form} />
    </div>
  </div>
</div>
