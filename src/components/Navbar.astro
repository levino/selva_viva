---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LanguagePicker from './LanguagePicker.astro';
import { pickLangPath } from '../utils/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---



<header class="mx-auto">
	<LanguagePicker />
	<nav class="bg-green-400 flex flex-wrap items-center px-4 py-5">
		<a
			href={ pickLangPath(lang) }
			class="font-medium hover:text-yellow_leave-300 mr-auto text-xl text-yellow_leave-400 uppercase"
			>Selva viva</a
		>
		<button
			class="hover:bg-green_dark-500 hover:text-white px-3 py-2 rounded text-yellow_leave-400 lg:hidden"
		>
			<span class="block border-b-2 border-current my-1 w-6" />
			<span class="block border-b-2 border-current my-1 w-6" />
			<span class="block border-b-2 border-current my-1 w-6" />
		</button>
		<div
			class="lg:flex lg:space-x-4 lg:space-y-0 lg:w-auto space-y-2 w-full hidden lg:items-center"
		>
			<div class="flex flex-col lg:flex-row">
				<a
					href={ pickLangPath(lang) }
					class="font-all font-medium hover:text-yellow_leave-400 px-0 py-2 uppercase lg:px-4"
					>{ t('nav.home') }</a
				>
				<div class="dropdown-group flex items-start lg:relative">
					<a
						href="/projects"
						class="font-all font-medium hover:text-yellow_leave-400 px-0 py-2 uppercase z-50 lg:px-4"
						>{ t('nav.projects') }</a
					>
					<ul
						class="dropdown-menu h-min ml-4 pt-14 w-max lg:absolute lg:bg-green-400 lg:hidden lg:z-30"
					>
						<li class="font-all font-medium pb-4 px-4">
							<a href="/projets/tree-nursery" class="lg:hover:text-yellow_leave-600">Vivero</a>
						</li>
						<li class="font-all font-medium pb-4 px-4">
							<a href="/projects/plant_a_tree" class="lg:hover:text-yellow_leave-600"
								>Planta un árbol</a
							>
						</li>
						<li class="font-all font-medium pb-4 px-4">
							<a href="/projects/bamboo" class="lg:hover:text-yellow_leave-600">Bambú</a>
						</li>
						<li class="font-all font-medium pb-4 px-4">
							<a href="/projects/vitabosa" class="lg:hover:text-yellow_leave-600">Vitabosa</a>
						</li>
						<li class="font-all font-medium pb-4 px-4">
							<a href="/projects/canavalia" class="lg:hover:text-yellow_leave-600">Canavalia</a>
						</li>
					</ul>
				</div>
				<a
					href="especies-arboles.html"
					class="font-all font-medium hover:text-yellow_leave-400 px-0 py-2 uppercase lg:px-4 lg:z-50"
					>Arboles</a
				>
				<a
					href="#"
					class="font-all font-medium hover:text-yellow_leave-400 px-0 py-2 uppercase lg:px-4 lg:z-50"
					>blog</a
				>
				<a
					href="#"
					class="font-all font-medium hover:text-yellow_leave-400 px-0 py-2 uppercase lg:px-4 lg:z-50"
					>contacto</a
				>
			</div>
			<a
				href="#"
				class="bg-yellow_leave-500 font-light hover:bg-yellow_leave-800 hover:text-white inline-block px-5 py-2 rounded text-black uppercase"
				>Donaciones</a
			>
		</div>
	</nav>
</header>

<style>
	@media (min-width: 1024px) {
		.dropdown-group:hover .dropdown-menu {
			display: block;
		}
	}
</style>