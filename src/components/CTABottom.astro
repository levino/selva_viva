---
import { getRelativeLocaleUrl } from "astro:i18n";
import { getLangFromUrl } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const { cta_bottom } = Astro.props;
---

<div class="py-10">
  <div class="flex flex-col gap-2 justify-evenly mx-auto w-3/12 md:flex-row">
    <a
      href={`${getRelativeLocaleUrl(lang)}${cta_bottom.button_1_link}`}
      class="bg-yellow_leave-500 font-light hover:bg-green-400 inline-block px-5 py-2 rounded-sm shadow-lg text-center text-white uppercase"
      >{cta_bottom.button_1_text}</a
    ><a
      href={`${getRelativeLocaleUrl(lang)}${cta_bottom.button_2_link}`}
      class="bg-green-300 font-light hover:bg-green-600 inline-block px-5 py-2 rounded-sm shadow-lg text-center text-white uppercase"
      >{cta_bottom.button_2_text}</a
    >
  </div>
</div>
