---
const { content } = Astro.props;
import { getLangFromUrl } from "../i18n/utils";
import { pickLangPath } from "../utils/utils";

const lang = getLangFromUrl(Astro.url);
---

<section class="bg-green_dark-700 solution">
  <div class="flex items-center justify-center relative">
    <div class="video_wrapper">
      <video
        src="videos/what%20are%20we%20doing.mov"
        autoplay="true"
        controls
        loop="true"
        muted="true"
        class="absolute h-full top-0 video_what_are_we_doing w-full"
        >Your browser doesn't support HTML5 video tag.</video
      >
    </div>
    <div
      class="bg-green_dark-500 bg-opacity-75 flex flex-col h-full items-center justify-center p-10 pb-1 relative"
    >
      <h3
        class="font-bold font-sans text-5xl text-center text-yellow_leave-600 md:pt-9"
      >
        {content.title}
      </h3>
      <p class="font-all p-8 text-2xl text-left text-white">
        {content.paragraph}
      </p>
      <div class="flex justify-evenly mb-10 w-full">
        <a
          href={`${pickLangPath(lang)}projects/tree-nursery`}
          class="bg-yellow_leave-700 font-light hover:bg-yellow_leave-600 inline-block px-5 py-2 rounded-sm text-brown_dark-900 text-xl uppercase"
          >{content.button}</a
        ><a
          href={`${pickLangPath(lang)}projects/plant-a-tree`}
          class="bg-yellow_leave-700 font-light hover:bg-yellow_leave-600 inline-block px-5 py-2 rounded-sm text-brown_dark-900 text-xl uppercase"
          >{content.button_2}</a
        >
      </div>
    </div>
  </div>
</section>
