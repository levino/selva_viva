---
const { content } = Astro.props;
import { getLangFromUrl } from "../i18n/utils";
import { pickLangPath } from "../utils/utils";
import Image from "astro/components/Image.astro";

const lang = getLangFromUrl(Astro.url);
---

<section class="bg-my_gray-50 problem">
  <div class="container mx-auto px-4">
    <div class="-mx-4 flex flex-wrap md:flex-row-reverse">
      <div class="md:w-7/12 relative">
        <Image
          src={content.image}
          alt={content.image_alt}
          width="1000"
          class="clip_photo_left_upper h-full object-cover"
        />
        <div class="absolute bottom-2 right-4">
          <span class="text-white"
            ><p
              class="drop-shadow-lg bg-slate-900 px-2 bg-opacity-70 font-all font-light italic text-right text-sm tracking-wide md:text-base"
            >
              {content.image_alt}
            </p></span
          >
        </div>
      </div>
      <div
        class="flex flex-col items-center justify-center px-4 md:border-r-2 md:w-5/12"
        style="border-left-color: #000000; border-right-style: none;"
      >
        <h3
          class="font-bold mb-2 mt-4 pt-5 px-8 text-brown_dark-600 text-center text-lg uppercase"
        >
          {content.title}
        </h3>
        <p
          class="drop-shadow-lg font-light leading-relaxed mb-6 px-8 text-brown-800 text-xl"
        >
          {content.paragraph}
        </p>
        <div class="flex justify-center mb-10">
          <a
            href={`${pickLangPath(lang)}${content.button_link}`}
            class="bg-yellow_leave-400 font-light hover:bg-green-400 inline-block px-5 py-2 rounded-sm text-white text-xl uppercase"
            >{content.button}</a
          >
        </div>
      </div>
    </div>
  </div>
</section>
