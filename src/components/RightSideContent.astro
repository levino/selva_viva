---
const { content } = Astro.props;
import { getLangFromUrl } from "../i18n/utils";
import { pickLangPath } from "../utils/utils";

const lang = getLangFromUrl(Astro.url);
---

<section class="bg-green_dark-600">
  <div class="container mx-auto px-4">
    <div class="-mx-4 flex flex-wrap">
      <div
        class="p-4 md:flex md:items-center md:justify-center md:w-1/2"
        style="border-left-color: #000000;"
      >
        <img src="" />
      </div>
      <div
        class="flex flex-col items-center justify-center px-4 w-full md:w-1/2"
      >
        <h3
          class="font-bold font-sans mt-9 text-4xl text-center text-yellow_leave-600"
        >
          {content.title}
        </h3>
        <p class="font-all p-8 text-2xl text-left text-white">{content.p}</p>
        <div class="flex justify-center mb-10">
          <a
            href={`${pickLangPath(lang)}projects`}
            class="bg-yellow_leave-700 font-light hover:bg-yellow_leave-600 inline-block px-5 py-2 rounded-sm text-brown_dark-900 text-xl uppercase"
            >{content.button}</a
          >
        </div>
      </div>
    </div>
  </div>
</section>
