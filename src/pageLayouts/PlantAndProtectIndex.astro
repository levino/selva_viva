---
import Layout from "../layouts/Layout.astro";
import PageTitle from "../components/PageTitle.astro";

import PlantAndProtectCard from "../components/PlantAndProtectCard.astro";

const { frontmatter, plantAndProtect } = Astro.props;
---

<Layout title={frontmatter.title}>
  <PageTitle>{frontmatter.title}</PageTitle>
  <p class="text-gray-900 text-center font-bold text-2xl">
    {frontmatter.subtitle}
  </p>

  <div class="mx-auto mt-9">
    <PlantAndProtectCard plantAndProtect={plantAndProtect} />
  </div>
</Layout>
