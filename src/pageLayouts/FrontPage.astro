---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import RightSideContent from "../components/RightSideContent.astro";
import LeftSideContent from "../components/LeftSideContent.astro";
import CenterContentVideoBg from "../components/CenterContentVideoBg.astro";
import bgImg from "../assets/plant-a-tree.png";
import ContentLeftThreeButtonsRight from "../components/ContentLeftThreeButtonsRight.astro";
import ParticipateSection from "../components/ParticipateSection.astro";
import AboutUsSection from "../components/AboutUsSection.astro";

const {
  content: { data },
} = Astro.props;
---

<Layout data={data.meta}>
  <Hero content={data.hero} bgImg={bgImg} />
  <ParticipateSection data={data} />
  <AboutUsSection data={data} />
  <RightSideContent content={data.situation} />
  <LeftSideContent content={data.problem} />
  <CenterContentVideoBg content={data.solution} />
  <ContentLeftThreeButtonsRight content={data.donors} />
</Layout>
