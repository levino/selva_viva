---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import RightSideContent from "../components/RightSideContent.astro";
import LeftSideContent from "../components/LeftSideContent.astro";
import CenterContentVideoBg from "../components/CenterContentVideoBg.astro";
import bgImg from "../assets/plant-a-tree.png";
import ContentLeftThreeButtonsRight from "../components/ContentLeftThreeButtonsRight.astro";

const {
  content: { frontmatter },
  hero,
} = Astro.props;
---

<Layout title={frontmatter.pageMetaTitle}>
  <Hero content={frontmatter.hero} bgImg={bgImg} />
  <RightSideContent content={frontmatter.situation} />
  <LeftSideContent content={frontmatter.problem} />
  <CenterContentVideoBg content={frontmatter.solution} />
  <ContentLeftThreeButtonsRight content={frontmatter.donors} />
</Layout>
