---
import Layout from "../layouts/Layout.astro";
import { getImage } from "astro:assets";
import { Image } from "astro:assets";

const {
  content: { data },
} = Astro.props;
console.log(data);

const heroImage = await getImage({ src: data.hero_image });
---

<Layout title={data.page_meta_title}>
  <section
    class="hero relative text-gray-500"
    style={`background-image: url(${heroImage.src});`}
  >
    <div class="container mx-auto px-4 py-48">
      <div
        class="bg-brown-900 bg-opacity-40 flex flex-wrap mx-auto py-10 lg:w-8/12"
      >
        <div class="mx-auto px-4 text-center w-full lg:w-8/12">
          <h1 class="drop-shadow-2xl font-extrabold mb-4 text-6xl text-white">
            {data.title}
          </h1>
          <p
            class="drop-shadow-2xl font-bold mb-2 text-2xl text-brown-50 uppercase"
          >
            {data.subtitle}
          </p>
          <p
            class="drop-shadow-lg font-light leading-relaxed mb-6 text-2xl text-white"
          >
            {data.excerpt}
          </p>
          <a
            href={data.hero_button.hero_button_link}
            class="bg-yellow_leave-500 font-light hover:bg-yellow_leave-500 inline-block px-5 py-2 rounded-sm text-white uppercase"
            >{data.hero_button.hero_button_text}</a
          >
        </div>
      </div>
    </div>
  </section><div class="my-5 md:mt-10">
    <div class="flex flex-no-wrap items-center mb-5 mx-auto py-4 w-4/5">
      <div class="bg-gray-500 flex-grow h-px max-w-full"></div>
      <div class="px-10 w-auto">
        <h2
          class="font-all font-semibold text-4xl text-yellow_leave-600 uppercase"
        >
          {data.vision.title}
        </h2>
      </div>
      <div class="bg-gray-500 flex-grow h-px max-w-full"></div>
    </div>
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap -mx-4">
        <div class="px-4 w-full md:w-1/2">
          <Image
            src={data.vision.image}
            alt="a tree"
            width="700"
            quality="mid"
            class="w-full"
          />
        </div>
        <div
          class="flex flex-col items-center justify-center p-4 w-full md:w-1/2"
        >
          <p class="font-bold mb-2 mt-4 text-brown-800 text-lg uppercase">
            {data.vision.subtitle}
          </p>
          <p
            class="drop-shadow-lg font-light leading-relaxed mb-6 px-8 text-brown-800 text-xl"
          >
            {data.vision.description}
          </p>
        </div>
      </div>
    </div>
  </div><div class="my-5 md:mt-10">
    <div class="flex flex-no-wrap items-center mb-5 mx-auto py-4 w-4/5">
      <div class="bg-gray-500 flex-grow h-px max-w-full"></div>
      <div class="px-10 w-auto">
        <h2
          class="font-all font-semibold text-4xl text-yellow_leave-600 uppercase"
        >
          {data.how_all_started.title}
        </h2>
      </div>
      <div class="bg-gray-500 flex-grow h-px max-w-full"></div>
    </div>
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap -mx-4">
        <div
          class="flex flex-col items-center justify-center px-4 w-full md:w-1/2"
        >
          <p class="font-bold mb-2 mt-4 text-brown-800 text-lg uppercase">
            {data.how_all_started.subtitle}
          </p>
          <p
            class="drop-shadow-lg font-light leading-relaxed mb-6 px-8 text-brown-800 text-xl"
          >
            {data.how_all_started.description}
          </p>
        </div>
        <div
          class="flex flex-col items-center justify-center p-4 w-full md:w-1/2"
        >
          <Image
            src={data.how_all_started.image}
            alt="a tree"
            width="700"
            quality="mid"
            class="w-full"
          />
        </div>
      </div>
    </div>
  </div><div class="mb-10 text-center">
    <a
      href={data.button_link}
      class="bg-yellow_leave-500 font-light hover:bg-yellow_leave-500 inline-block mt-5 px-5 py-2 rounded-sm shadow-lg text-white uppercase"
      >{data.button}</a
    >
  </div>
</Layout>

<style>
  .hero {
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
  }
</style>
