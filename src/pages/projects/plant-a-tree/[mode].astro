---
import PlantATreePage from "../../../pageLayouts/PlantATreePage.astro";
import { getCollection } from "astro:content";
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const treeEntries = await getCollection("plantATree");

  return treeEntries.map((entry) => ({
    params: { mode: entry.slug },
    props: { entry },
  }));
}
// 2. When it's time to render, you can get the entry directly from the prop
const { entry } = Astro.props;

const { Content } = await entry.render();
---

<PlantATreePage frontmatter={entry.data}>
  <div class="prose mx-auto text-lg"><Content /></div>
</PlantATreePage>
